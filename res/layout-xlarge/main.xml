<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content">

    <ImageView

            android:layout_width="320dp"
            android:layout_height="100dp"
            android:background="@drawable/cocc_bg"/>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_marginTop="100dp"
              android:weightSum="1"
              android:background="@drawable/normal_bg"
              android:rowCount="9"
              android:columnCount="5"


        >



    <ImageButton
            android:layout_marginTop="2dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="google map"
            android:layout_gravity=""
            android:clickable="true"
            android:background="@drawable/map_icon"
            android:id="@+id/button2"
            android:layout_marginLeft="10dp"
            android:layout_row="0"
            android:layout_column="0"/>

        <ImageButton

                android:layout_marginTop="15dp"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@drawable/calendar_icon"
                android:id="@+id/LibraryButton"
                android:layout_marginLeft="15dp"
                android:layout_row="0"
                android:layout_column="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textColor="#ff508dff"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"
            android:textColor="#ff508dff"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:textSize="15dp"
            android:layout_row="1"
            android:layout_column="0"/>

        <ImageButton

            android:layout_marginTop="15dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_gravity=""
            android:clickable="true"
            android:text="@string/loginpage"
            android:background="@drawable/bobcatface"
            android:id="@+id/button3"
            android:layout_marginLeft="15dp"
            android:layout_row="4"
            android:layout_column="0"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student"
            android:textColor="#ff508dff"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:textSize="15dp"
            android:layout_row="5"
            android:layout_column="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitter"
            android:textColor="#ff508dff"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_row="7"
            android:layout_column="1"/>

        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:id="@+id/fbButton"
            android:background="@drawable/fb_icon"
            android:layout_row="6"
            android:layout_column="0"/>

        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_marginLeft="15dp"
            android:background="@drawable/twitter_t_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textColor="#ff508dff"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_row="7"
            android:layout_column="0"/>

        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:background="@drawable/youtube_icon"
            android:id="@+id/YtButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Videos"
            android:textColor="#ff508dff"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_row="7"
            android:layout_column="2"/>

    </GridLayout>

</RelativeLayout>
